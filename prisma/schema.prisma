generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  username     String
  password     String
  email        String
  display_name String
  games        Int      @default(0)
  avatar       String   @default("https://i.ibb.co/LR40jQH/def-avatar.png")
  rating       Int      @default(0)
  wins         Int      @default(0)
  losses       Int      @default(0)
  created_at   DateTime @default(now()) @db.Timestamptz(6)
  updated_at   DateTime @db.Timestamptz(6)
  draws        Int      @default(0)
  Token        Token[]

  @@map(name: "users")
}

model Game {
  id           Int      @id @default(autoincrement())
  date         DateTime @db.Timestamptz(6)
  white_player Int
  black_player Int
  winner       String
  loser        String
  moves        String[]

  @@map(name: "games")
}

model Token {
  id      Int    @id @default(autoincrement())
  jti     String
  user_id Int    @unique
  user    User?  @relation(fields: [user_id], references: [id])

  @@map(name: "tokens")
}
